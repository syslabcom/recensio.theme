<div class="documentByLine"
     id="category"
     tal:define="
       categories context/Subject|nothing;
       url_quote  nocall:modules/Products.PythonScripts.standard/url_quote;
     "
     tal:condition="categories"
     i18n:domain="plone"
>
  <tal:filedunder i18n:translate="label_filed_under">Filed under:</tal:filedunder>
  <span tal:repeat="category categories">
    <a class="link-category"
       href=""
       rel="tag"
       tal:define="
         quotedCat python:url_quote(category);
       "
       tal:content="category"
       tal:attributes="
         href string:${context/@@plone_portal_state/navigation_root_url}/@@search?Subject%3Alist=${quotedCat};
       "
    >
      Category
    </a><span class="separator"
          tal:condition="not: repeat/category/end"
    >,</span>
  </span>
</div>
