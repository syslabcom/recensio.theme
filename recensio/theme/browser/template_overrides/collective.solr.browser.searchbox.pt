<div id="portal-searchbox"
     i18n:domain="plone"
      tal:define="
        rhv python:here.restrictedTraverse('@@recensio-helper-view');
      "
>
  <form action="search"
        name="searchform"
        tal:attributes="
          action string:${view/site_url}/search;
        "
  >

    <label class="hiddenStructure"
           for="searchGadget"
           i18n:translate="text_search"
    >Search Site</label>

    <div class="LSBox">
      <input class="inputLabel"
             accesskey="4"
             name="SearchableText"
             size="18"
             title="Search Site"
             type="text"
             value=""
             tal:attributes="
               value request/SearchableText|nothing;
               id view/search_input_id;
             "
             i18n:attributes="title title_search_site;"
      />

      <input class="searchButton"
             type="submit"
             value="Search"
             i18n:attributes="value label_search;"
      />

      <div class="searchSection">
        <input class="noborder"
               id="searchbox_currentfolder_only"
               name="path"
               type="checkbox"
               tal:attributes="
                 value view/folder_path;
               "
        />
        <label for="searchbox_currentfolder_only"
               style="cursor: pointer"
               i18n:translate="label_searchbox_currentfolder_only"
        >
                only in current section
        </label>
      </div>

      <div class="LSResult"
           id="LSResult"
           style=""
      ><div class="LSShadow"
             id="LSShadow"
        ></div></div>
    </div>

    <input tal:repeat="portal_type rhv/types_visible_in_search"
           tal:attributes="value portal_type"
           name="portal_type:list"
           type="hidden"
    />

    <input name="sort_on"
           type="hidden"
           value="sortable_year"
    />
    <input name="sort_order"
           type="hidden"
           value="reverse"
    />

    <div tal:replace="structure view/hiddenfields"></div>

  </form>

  <div class="hiddenStructure"
       id="portal-advanced-search"
       tal:define="types_query python:'&portal_type:list='.join(rhv.types_visible_in_search);"
  >
    <a accesskey="5"
       href="#"
       tal:attributes="
         href string:${view/site_url}/search_form?sort_on=sortable_year&amp;sort_order=reverse${types_query};
       "
       i18n:translate="label_advanced_search"
    >
            Advanced Search&hellip;
    </a>
  </div>

</div>
