<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="recensio">
  <head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1);
                             disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',1);" />

  </head>

  <body>
    <metal:main fill-slot="main"
                tal:define="results view/getResults;
                            Batch python:modules['Products.CMFPlone'].Batch;
                            b_size python:10; b_size request/b_size | b_size;
                            b_start python:0;b_start request/b_start | b_start;
                            desc_length site_properties/search_results_description_length;
                            desc_ellipsis site_properties/ellipsis;
                            use_view_action site_properties/typesUseViewActionInListings|python:();
                            portal_url context/portal_url;
                            usedFacets view/getUsedFacets;
                            submenus view/getSubmenus;"
                >

      <div id="content-core">

        <div id="browsing-menu" tal:define="menu view/getMenu;">
          <tal:submenus repeat="submenu submenus">
            <div class="submenu"
                 tal:attributes="id python:'submenu_' + submenu['id'];">
              <div class="menu_headline"
                   tal:attributes="id python:'headline_' + submenu['id']; 
                                   class python:submenu['id'] in usedFacets and 'used_facet menu_headline' or 'menu_headline'"> 
                <span class="headlinebutton"
                      i18n:translate="" 
                      tal:content="submenu/title" />
                <tal:c repeat="sel submenu/selected">
                  [<span tal:content="sel/voc" />
                  <a tal:condition="sel/clearquery"
                     title="Remove this selection" 
                     i18n:attributes="title"
                     tal:attributes="href string:${request/ACTUAL_URL}?${sel/clearquery}">&otimes;</a>]
                </tal:c>
              </div>
              <tal:block tal:repeat="item python:menu[submenu['id']]">
                <div tal:condition="python:item['count']>0 or item.has_key('clearquery') or view.showSubmenu(item['submenu'])">
                  <div class="submenu_title">
                    <a href="#" tal:content="item/voc"
                       tal:condition="item/query"
                       tal:attributes="href string:${request/ACTUAL_URL}?${item/query}" />
                    <!-- <span tal:condition="not: item/count" tal:content="item/voc" /> -->
                    
                    <span tal:content="item/voc"
                          tal:condition="not:item/query" />
                    <tal:block tal:condition="exists:item/clearquery">
                      <a title="Remove this selection" i18n:attributes="title"
                         tal:attributes="href string:${request/ACTUAL_URL}?${item/clearquery}">
                        &otimes;
                      </a>
                      
                    </tal:block>
                  </div>
                  <div class="submenu_number">
                    <span tal:condition="python:item['count'] > 0" tal:content="string:(${item/count})" />
                  </div>

                  
                  <div class="submenu_content">
                    <tal:block tal:repeat="subitem item/submenu">
                      <tal:block tal:condition="python:subitem['count']>0 or subitem.has_key('clearquery') or view.showSubmenu(subitem['submenu'])">
                        <a href="#" tal:content="subitem/voc"
                           tal:condition="subitem/query"
                           tal:attributes="href string:${request/ACTUAL_URL}?${subitem/query}"
                           i18n:translate="" />
                        <span tal:content="subitem/voc"
                              tal:condition="not:subitem/query"
                              i18n:translate="" />
                        <tal:block tal:condition="exists:subitem/clearquery">
                          <a title="Remove this selection" i18n:attributes="title"
                             tal:attributes="href string:${request/ACTUAL_URL}?${subitem/clearquery}">
                            &otimes;
                          </a>
                        </tal:block>
                        <span tal:condition="python:subitem['count'] > 0"
                              tal:replace="string:(${subitem/count})" />
                      </tal:block>
                    </tal:block>
                  </div>
                  <div class="visualClear"><!-- --></div>
                </div>
              </tal:block>
            </div>
            <div class="visualClear"></div>
          </tal:submenus>
        </div>

        <h1 class="documentFirstHeading">
          <span i18n:translate="heading_browsing_results">
            Browsing
          </span>
          <span class="discreet">
            &mdash;
            <span i18n:translate="batch_x_items_matching_your_criteria"
                  ><span i18n:name="number" 
                         tal:omit-tag="" 
                         tal:content="python:len(results)">0</span> items matching</span>
          </span>
        </h1>

        <div tal:condition="results"
             tal:define="normalizeString nocall: context/plone_utils/normalizeString;
                         isAnon context/@@plone_portal_state/anonymous;
                         toLocalizedTime nocall: context/@@plone/toLocalizedTime;
                         batch python:Batch(results, b_size, int(b_start), orphan=1);">

          <dl class="searchResults">

            <tal:results repeat="result batch">
              <tal:has_results condition="result">
                <tal:entry define="result_authors result/listAuthors;
                                   result_url result/getURL;
                                   result_type result/portal_type;
                                   is_review python:result_type.startswith('Review');
                                   is_presentation python:result_type.startswith('Presentation');
                                   item_icon python:plone_view.getIcon(result);
                                   url python:result_url+'/view' if result_type in use_view_action else result_url+'/';">
                  <dt tal:define="item_wf_state_class string:state-${result/review_state};"
                      tal:attributes="class python:'contenttype-' + normalizeString(result.portal_type)">
                    <img width="32" height="32"
                         tal:condition="python:is_review or is_presentation"
                         tal:attributes="src python:(is_review and '%s/++resource++recensio.theme.images/Aufsatz32.png' or '%s/++resource++recensio.theme.images/Internetresource32.png') % portal_url;
                                         alt result_type;
                                         title result_type;"
                         i18n:attributes="alt; title;" />

                    <span class="authors"
                          tal:repeat="author result_authors">
                      <a href="seach"
                         tal:attributes="href string:$portal_url/search?authors:list=$author"
                         tal:content="author">Христо Стоичков</a>, 
                    </span>

                    <span class="year" 
                          tal:content="result/getYearOfPublication | result/getOfficialYearOfPublication" />
                    
                    <div class="title">
                      <a href="#"
                         tal:attributes="href url;
                                         class string:$item_wf_state_class"
                         tal:content="result/pretty_title_or_id" />
                    </div>
                    <span class="review-author" 
                          tal:condition="is_review">
                      (<tal:author i18n:translate="reviewed_by">reviewed by
                        <tal:nameblock i18n:name="review_authors">
                          <tal:repeatblock repeat="reviewAuthor result/listReviewAuthors">
                            <tal:block tal:content="reviewAuthor"/>
                            <tal:c condition="not: repeat/reviewAuthor/end"> / </tal:c>
                          </tal:repeatblock>
                        </tal:nameblock>
                      </tal:author>)
                    </span>
                    <span class="review-author"
                          tal:attributes="class string:review-author"
                          tal:condition="is_presentation">
                      (<tal:author i18n:translate="presented_by">presented by
                        <tal:nameblock i18n:name="review_authors">
                          <tal:repeatblock repeat="reviewAuthor result/listReviewAuthors">
                            <tal:block tal:content="reviewAuthor"/>
                            <tal:c condition="not: repeat/reviewAuthor/end"> / </tal:c>
                          </tal:repeatblock>
                        </tal:nameblock>
                      </tal:author>)
                    </span>
                  </dt>
                  
                  <dd>

                    <div class="documentByLine">
                      <span class="documentModified">
                        <span i18n:translate="box_last_modified">
                          last modified
                        </span>
                        <span tal:replace="python:toLocalizedTime(result.ModificationDate, long_format=1)">
                          August 16, 2001 at 23:35:59
                        </span>
                      </span>

                      <span tal:define="tags result/Subject|nothing"
                            tal:condition="tags">
                        &mdash;
                        <tal:filedunder i18n:translate="label_filed_under">Filed under:</tal:filedunder>
                        <span tal:repeat="tag tags">
                          <a href=""
                             class="link-tag"
                             rel="tag"
                             tal:content="tag"
                             tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/search?Subject%3Alist=${tag}">
                            Tag
                          </a><tal:separator condition="not: repeat/tag/end">,</tal:separator>
                        </span>
                      </span>

                      <span class="relevance"
                            tal:condition="python: result.data_record_normalized_score_ > 1">
                        &mdash;
                        <tal:relevance i18n:translate="label_relevance_percentage">
                          Relevance:
                          <span tal:content="result/data_record_normalized_score_"
                                tal:omit-tag=""
                                i18n:name="percentage">23</span>%
                        </tal:relevance>
                      </span>
                    </div>

                  </dd>

                </tal:entry>
              </tal:has_results>
            </tal:results>

          </dl>
          
          <div metal:use-macro="context/batch_macros/macros/navigation" />

        </div>
      </div>


    </metal:main>
  </body>
</html>
