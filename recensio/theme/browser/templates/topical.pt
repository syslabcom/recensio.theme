<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="recensio">
  <head>
    <metal:block fill-slot="top_slot"
                 tal:define="dummy python:request.set('disable_border',1);
                             disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',1);" />
    <metal:javascript_head fill-slot="javascript_head_slot">

      <script type="text/javascript" src="++resource++recensio.theme.javascript/topical.js"></script>
    </metal:javascript_head>

  </head>

  <body>
    <metal:main fill-slot="main"
                tal:define="results view/getResults;
                            Batch python:modules['Products.CMFPlone'].Batch;
                            b_size python:10; b_size request/b_size | b_size;
                            b_start python:0;b_start request/b_start | b_start;
                            desc_length site_properties/search_results_description_length;
                            desc_ellipsis site_properties/ellipsis;
                            use_view_action site_properties/typesUseViewActionInListings|python:();
                            portal_url context/portal_url;
                            usedFacets view/getUsedFacets;
                            submenus view/getSubmenus;
                            rhv context/@@recensio-helper-view"
                >

      <div id="content-core">

        <h1 class="documentFirstHeading">
          <span i18n:translate="heading_browsing_results">
            Browsing
          </span>
          <span class="discreet">
            &mdash;
            <span i18n:translate="batch_x_items_matching_your_criteria"
                  ><span i18n:name="number"
                         tal:omit-tag=""
                         tal:content="python:len(results)">0</span> items matching</span>
          </span>
        </h1>

        <div class="visualClear"></div>
        <div tal:condition="results"
             tal:define="normalizeString nocall: context/plone_utils/normalizeString;
                         isAnon context/@@plone_portal_state/anonymous;
                         toLocalizedTime nocall: context/@@plone/toLocalizedTime;
                         batch python:Batch(results, b_size, int(b_start), orphan=0);">


          <dl class="searchResults">

            <tal:results repeat="result batch">
              <tal:has_results condition="result">
                <tal:entry define="result_authors result/listAuthors;
                                   result_url result/getURL;
                                   result_type result/portal_type;
                                   is_review python:result_type.startswith('Review');
                                   is_presentation python:result_type.startswith('Presentation');
                                   is_article python:result_type.startswith('Article');
                                   item_icon python:plone_view.getIcon(result);
                                   url python:result_url+'/view' if result_type in use_view_action else result_url+'/';">
                  <dt tal:define="item_wf_state_class string:state-${result/review_state};"
                      tal:attributes="class python:'contenttype-' + normalizeString(result.portal_type)">
                    <img width="32" height="32"
                         tal:condition="python:is_review or is_presentation or is_article"
                         tal:attributes="src python:((is_review or is_article) and '%s/++resource++recensio.theme.images/Aufsatz32.png' or '%s/++resource++recensio.theme.images/Internetresource32.png') % portal_url;
                                         alt result_type;
                                         title result_type;"
                         i18n:attributes="alt; title;" />

                  <tal:block condition="result/listAuthors">
                    <span class="authors" tal:attributes="class string:authors">
                      <span class="author" tal:attributes="class string:author"
                            tal:repeat="author result/listAuthors">
                        <a tal:content="author"
                           tal:attributes="href string:$portal_url/search?authors:list=$author" /><tal:c condition="not: repeat/author/end"> / </tal:c><tal:c condition="repeat/author/end"></tal:c></span></span>:
                  </tal:block>

                  <span class="title">
                      <a
                         href="#"
                         tal:attributes="href url;
                                         class string:$item_wf_state_class">
                          <tal:block condition="python:result_type == 'Issue'">
                              <tal:block define="volume python:result.getObject().getParentNode();
                                                 volume_title python:volume.Title();
                                                 publication_title python:volume.getParentNode().Title();">
                                <span class="publication-title" tal:content="publication_title" /><tal:c condition="publication_title">: </tal:c>
                                <span class="volume-title" tal:content="volume_title" /><tal:c condition="volume_title">, </tal:c>
                              </tal:block>
                          </tal:block>
                          <tal:block tal:content="python:rhv.punctuated_title(result.pretty_title_or_id(), result.subtitle)" /></a></span><tal:block replace="result/subtitle | nothing" /><tal:block tal:condition="result/getYearOfPublication | result/getOfficialYearOfPublication">,</tal:block>
                  <span class="year" tal:attributes="class string:year" tal:content="result/getYearOfPublication | result/getOfficialYearOfPublication" /><tal:block tal:condition="result/isbn | nothing">, ISBN </tal:block><tal:block tal:condition="result/issn | nothing">, ISSN </tal:block>
                  <span class="isbn" tal:condition ="result/isbn | nothing" tal:content="result/isbn" />
                  <span class="issn" tal:condition ="result/issn | nothing" tal:content="result/issn" />

                  <span class="review-author" tal:condition="is_review" tal:attributes="class string:review-author">
                        <br /><tal:author i18n:translate="reviewed_by">Reviewed by <tal:nameblock i18n:name="review_authors"><tal:repeatblock repeat="reviewAuthor result/listReviewAuthorsFirstnameFirst"><tal:block tal:replace="reviewAuthor"/><tal:c condition="not: repeat/reviewAuthor/end"> / </tal:c></tal:repeatblock></tal:nameblock></tal:author><tal:block tal:condition="result/get_publication_title | nothing">, </tal:block>
                  <tal:block tal:condition="result/get_publication_title | nothing">
                  <tal:journal tal:condition="result/get_publication_title | nothing" i18n:translate="source_journal">in: <tal:block i18n:name="get_publication_title" replace="result/get_publication_title" />, <tal:block i18n:name="get_volume_title" replace="result/get_volume_title" />, <tal:block i18n:name="get_issue_title" replace="result/get_issue_title" />
                  </tal:journal>
                  </tal:block>
                  </span>

                  <tal:author tal:condition="is_presentation">
                  <br /><span class="review-author" tal:attributes="class string:review-author" i18n:translate="presented_by">
                        Presented by <tal:nameblock i18n:name="review_authors"><tal:repeatblock repeat="reviewAuthor result/listReviewAuthorsFirstnameFirst"><tal:block tal:replace="reviewAuthor"/><tal:c condition="not: repeat/reviewAuthor/end"> / </tal:c></tal:repeatblock></tal:nameblock>
                  </span>
                  </tal:author>

                  <span class="article-author" tal:condition="is_article" tal:attributes="class string:review-author">
                        <br /><tal:author i18n:translate="by">by <tal:nameblock i18n:name="review_authors"><tal:repeatblock repeat="reviewAuthor result/listReviewAuthorsFirstnameFirst"><tal:block tal:replace="reviewAuthor"/><tal:c condition="not: repeat/reviewAuthor/end"> / </tal:c></tal:repeatblock></tal:nameblock></tal:author><tal:block tal:condition="result/get_publication_title | nothing">, </tal:block>
                  <tal:block tal:condition="result/get_publication_title | nothing">
                  <tal:journal tal:condition="result/get_publication_title | nothing" i18n:translate="source_journal">in: <tal:block i18n:name="get_publication_title" replace="result/get_publication_title" />, <tal:block i18n:name="get_volume_title" replace="result/get_volume_title" />, <tal:block i18n:name="get_issue_title" replace="result/get_issue_title" />
                  </tal:journal>
                  </tal:block>
                  </span>

                </dt>

                <dd>

                <span class="documentByLine"
                      >

                    <span class="documentModified">
                        <span i18n:translate="box_last_modified">
                        last modified
                        </span>
                        <span tal:replace="python:toLocalizedTime(result.ModificationDate, long_format=1)">
                        August 16, 2001 at 23:35:59
                        </span>
                    </span>


                    <span tal:define="tags result/Subject|nothing"
                          tal:condition="tags">
                        &mdash;
                        <tal:filedunder i18n:translate="label_filed_under">Filed under:</tal:filedunder>
                            <span tal:repeat="tag tags">
                                <a href=""
                                   class="link-tag"
                                   rel="tag"
                                   tal:content="tag"
                                   tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/search?Subject%3Alist=${tag}">
                                   Tag
                                </a><tal:separator condition="not: repeat/tag/end">,</tal:separator>
                            </span>
                    </span>

                    <span class="relevance"
                          tal:condition="python: result.data_record_normalized_score_ > 1">
                        &mdash;
                        <tal:relevance i18n:translate="label_relevance_percentage">
                        Relevance:
                            <span tal:content="result/data_record_normalized_score_"
                                   tal:omit-tag=""
                                   i18n:name="percentage">23</span>%
                        </tal:relevance>
                    </span>
                </span>

                </dd>

                </tal:entry>
              </tal:has_results>
            </tal:results>

          </dl>

        <div id="browsing-menu" tal:define="menu view/getMenu;">
          <tal:submenus repeat="submenu submenus">
            <div class="submenu"
                 tal:attributes="id python:'submenu_' + submenu['id'];">
              <div class="menu_headline"
                   tal:attributes="id python:'headline_' + submenu['id'];">
                <span class="headlinebutton"
                      i18n:translate=""
                      tal:content="submenu/title" />
              </div>

              <div class="visualClear"><!-- --></div>

              <tal:block tal:repeat="item python:menu[submenu['id']]">
                <div class="submenu-lvl2" tal:condition="python:item['count']>0 or item.has_key('clearquery') or view.showSubmenu(item['submenu'])">
                  <div class="submenu_title empty"
                       tal:attributes="id python:'sub-' + item['name'].replace(':','-').replace('.','_');
                                       class python:'submenu_title' + (not item['submenu'] and ' empty' or '') + (view.expandSubmenu(item['submenu']) and ' open' or '');">
                    <tal:block tal:condition="exists:item/clearquery">
                      <a title="Remove this selection" i18n:attributes="title"
                         tal:attributes="href string:${request/ACTUAL_URL}?${item/clearquery}">
                        <img src="++resource++recensio.theme.images/checkbox_selected_brown_bg.png"/>
                      </a>
                    </tal:block>

                    <a href="#"
                       tal:condition="not:exists:item/clearquery"
                       tal:attributes="href string:${request/ACTUAL_URL}?${item/query};
                                       class python:item.has_key('clearquery') and 'selected_facet' or '';" >
                      <img src="++resource++recensio.theme.images/checkbox_unselected_brown_bg.png"/>
                    </a>
                    <span>
                      <tal:title tal:replace="item/voc"/>
                      <tal:count tal:condition="python:item['count'] > 0" tal:replace="string:(${item/count})" />
                    </span>
                  </div>

                  <ul class="submenu_content"
                      tal:attributes="id python:'sub-' + item['name'].replace(':','-').replace('.','_');
                                      class python:'submenu_content' + (view.expandSubmenu(item['submenu']) and ' open' or '');">
                    <tal:submenu repeat="subitem item/submenu">
                      <li class="submenu_item"
                          tal:define="selected python:subitem.get('clearquery') and 'selected' or 'unselected'"
                          tal:attributes="class string:submenu_item ${selected}"
                          tal:condition="python:subitem['count']>0 or subitem.has_key('clearquery') or view.expandSubmenu(subitem['submenu'])">

                        <a href="#" tal:content="subitem/voc"
                           tal:condition="subitem/query"
                           tal:define="query_or_clear python:(True and subitem.get('clearquery', False) or subitem.get('query'))"
                           tal:attributes="href string:${request/ACTUAL_URL}?${query_or_clear};
                                           class python:subitem.has_key('clearquery') and 'selected_facet' or '';"
                           i18n:translate="" />
                        <span tal:content="subitem/voc"
                              tal:condition="not:subitem/query"
                              i18n:translate="" />
                        <span tal:condition="python:subitem['count'] > 0"
                              tal:replace="string:(${subitem/count})" />
                      </li>

                    </tal:submenu>
                  </ul>

                  <div class="visualClear"><!-- --></div>
                </div>
              </tal:block>
              <div class="submenu_more invisible">
                  <a i18n:translate="browsing_submenu_more">Mehr anzeigen...</a>
              </div>
            </div>
            <div class="visualClear"></div>
          </tal:submenus>
        </div>


          <div metal:use-macro="context/batch_macros/macros/navigation" />

        </div>


      </div>

    </metal:main>
  </body>
</html>
