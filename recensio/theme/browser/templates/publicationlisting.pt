<div id="publicationlisting"
     tal:define="language context/@@plone_portal_state/language;
                 portal_url context/portal_url;"
     i18n:domain="recensio"
     tal:condition="view/visible">

  <a name="publicationslisting" />
  <tal:volumes repeat="volume view/volumes | nothing">
    <h2 tal:content="volume/Title" />

    <tal:reviews repeat="review volume/reviews | nothing">
      <h4 tal:content="review/Title" />
    </tal:reviews>

    <tal:issues repeat="issue volume/issues | nothing">
      <h3 tal:content="issue/Title" />
      <span tal:condition="issue/pdf | nothing"><span tal:define="context issue/pdfobj" metal:use-macro="python:issue['pdfobj'].widget('file', mode='view')" /></span>

      <ul>
        <li tal:repeat="review issue/reviews">
          <a tal:attributes="href review/absolute_url"
             tal:content="review/getDecoratedTitle" />
        </li>
      </ul>
    </tal:issues>
  </tal:volumes>

</div>
