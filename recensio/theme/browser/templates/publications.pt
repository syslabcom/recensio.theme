<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="recensio.theme">


  <metal:javascript_head fill-slot="javascript_head_slot">
  
  </metal:javascript_head>

<body>
<metal:main fill-slot="main"
    tal:define="ploneview python:context.restrictedTraverse('@@plone')">
    <h1 i18n:translate="heading_publications">Publications</h1>
    <p i18n:translate="description_publications">These are the publications... Frau Landes?</p>
    <div id="content_left">
      <tal:rep repeat="publication view/publications">
        <h2 tal:content="publication/Title">Publication Title</h2>
        <img src="#"
             tal:attributes="src python:view.getimage(publication); alt string:${publication/Title} logo" 
             class="floatBefore publication-image"
             >

        <p tal:content="structure publication/Description">The Description</p>
        <div class="visualClear"></div>
      </tal:rep>
    </div>

</metal:main>
</body>
</html>
