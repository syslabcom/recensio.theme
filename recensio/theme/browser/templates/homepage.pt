<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="recensio.theme">


  <metal:javascript_head fill-slot="javascript_head_slot">
        <script src="/++resource++recensio.theme.behaviour/jquery.timers.js"
        tal:attributes="src string:${context/absolute_url}/++resource++recensio.theme.behaviour/jquery.timers.js
        " type="text/javascript" charset="utf-8"> </script>

        <script src="/++resource++recensio.theme.behaviour/jquery.easyticker.js"
        tal:attributes="src string:${context/absolute_url}/++resource++recensio.theme.behaviour/jquery.easyticker.js
        " type="text/javascript" charset="utf-8"> </script>
    </metal:javascript_head>

<body>
<metal:main fill-slot="main"
    tal:define="ploneview python:context.restrictedTraverse('@@plone')">

        <div id="content_left">
        <div id="rowTop" class="boxrow">

            <div class="box">
              <h2 i18n:translate="label_latest_review_journals">Neueste Rezensionsteile online</h2>
              <div id="latest_internet_resources_box" tal:define="results view/getReviewJournals">
                <ul>
                    <li tal:repeat="res results">&quot;<a href="#" tal:attributes="href res/review_url"  tal:content="res/Title">title</a>&quot; in <a href="#" tal:attributes="href res/publication_url"><em tal:content="res/publication_title">title</em></a></li>
                </ul>
              </div>
            </div>


            <div class="box">
              <h2 i18n:translate="label_latest_monographies">Neueste Präsentationen von Monographien und Aufsätze</h2>
              <div id="latest_monographies_box" tal:define="results view/getPrintedPresentations">
                <ul>
                    <li tal:repeat="res results"><a href="#" tal:attributes="href res/getURL" tal:content="res/Title">title</a></li>
                </ul>
              </div>
            </div>
        </div>

        <div class="visualClear"></div>

        <div id="rowBottom" class="boxrow">
            <div class="box">
              <h2 i18n:translate="label_latest_reviews">Neueste Rezensionen online</h2>
              <div id="latest_reviews_box" tal:define="results view/getReviewMonographs">
                <span tal:repeat="langres results">
                    <!-- <label><span tal:replace="langres/langname" /></label> -->
                    <ul id="list_reviews" tal:attributes="id string:list_reviews_${langres/language}"
                        class="easyticker">
                        <li tal:repeat="res langres/results">
                            <a href="#" tal:attributes="href res/getURL">
                                <span tal:replace="res/Title" />
                            </a>
                        </li>
                    </ul>
                    <div class="visualClear"></div>
                </span>
              </div>
            </div>

            <div class="box">
              <h2 i18n:translate="label_latest_internet_resources">Neueste Präsentationen von Internetressourcen</h2>
              <div id="latest_internet_resources_box" tal:define="results view/getOnlinePresentations">
                <ul>
                    <li tal:repeat="res results"><a href="#" tal:attributes="href res/getURL" tal:content="res/Title">title</a></li>
                </ul>
              </div>
            </div>
        </div>

        <div style="clear:left;"></div>
        <div id="column_wide">
            Teilnehmende Zeitschriften
        </div>
        </div>

    <script type="text/javascript">
//<![CDATA[

	$(document).ready(function() {
		$('#list_reviews_de').easyticker({
		speed: 'fast', 
		dureeAffichage: 3000
		});
		}); 
	$(document).ready(function() {
		$('#list_reviews_fr').easyticker({
		speed: 'fast', 
		dureeAffichage: 3000
		});
		});
	$(document).ready(function() {
		$('#list_reviews_en').easyticker({
		speed: 'fast', 
		dureeAffichage: 3000
		})
		}); 

      // $(function(){
      //   $("ul#list_reviews_de").liScroll({travelocity: 0.1});
      // });
