<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="recensio">

  <div metal:define-macro="ueberuns"
        id="secondary-nav-portlet" class="firstmenu">
    <ul>
      <li 
         tal:define="is_current python:context.getId().startswith('index_html')"
         tal:attributes="class python:is_current and 'first active' or 'first';
                         id python:is_current and 'firstcurrent' or ''"
         >
        <a href="index_html"
           i18n:translate="label_secondary_nav_concept">Konzept</a>
      </li>
      <li 
         tal:define="is_current python:context.getId().startswith('kontakt')"
         tal:attributes="id python:is_current and 'current' or ''">
        <a href="kontakt" 
           tal:attributes="class python:is_current and 'active' or ''"
           i18n:translate="label_secondary_nav_contact">Kontakt</a>
      </li>
      <li
         tal:define="is_current python:context.getId().startswith('benutzerrichtlinien')"
         tal:attributes="id python:is_current and 'current' or ''"
         >
        <a href="benutzerrichtlinien" 
           tal:attributes="class python:is_current and 'active' or ''"
           i18n:translate="label_secondary_nav_user_guidelines">Benutzerrichtlinien</a>
      </li>
      <li class="last"
         tal:define="is_current python:context.getId().startswith('copyright')"
         tal:attributes="id python:is_current and 'lastcurrent' or ''"
         >
        <a 
           tal:attributes="class python:is_current and 'active' or ''"
           href="copyright"
           i18n:translate="label_secondary_nav_copyright">Copyright</a>
      </li>
    </ul>
  </div>

  <div metal:define-macro="rezensionen" tal:condition="python:context.id == 'rezensionen' or context.id == 'zeitschriften'"
        id="secondary-nav-portlet" class="firstmenu">
    <ul>
      <li 
         tal:define="is_current python:context.getId().startswith('zeitschriften') and not 'search' in context.REQUEST.getURL()"
         tal:attributes="class python:is_current and 'first active' or 'first';
                         id python:is_current and 'firstcurrent' or ''"
         >
        <a href=""
           tal:attributes="href python:context.rezensionen.zeitschriften.absolute_url()"
           i18n:translate="label_secondary_nav_journals">Zeitschriften</a>
      </li>
      <li class="last"
         tal:define="is_current python:'search' in context.REQUEST.getURL()"
         tal:attributes="id python:is_current and 'lastcurrent' or ''"
         >
        <a 
           tal:attributes="class python:is_current and 'active' or ''; href python:context.rezensionen.zeitschriften.absolute_url() + '/search?portal_type:list=Review+Monograph&amp;portal_type:list=Review+Journal'"
           href="search?portal_type:list=Review+Monograph&amp;portal_type:list=Review+Journal"
           i18n:translate="label_secondary_nav_latest_reviews">Neueste Rezensionen</a>
      </li>
    </ul>
  </div>
</html>
