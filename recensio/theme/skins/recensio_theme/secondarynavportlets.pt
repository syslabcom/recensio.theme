<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="recensio.theme">

  <div metal:define-macro="ueberuns"
        id="secondary-nav-portlet" class="firstmenu">
    <ul>
      <li 
         tal:define="is_current python:context.getId().startswith('kontakt')"
         tal:attributes="class python:is_current and 'first active' or 'first';
                         id python:is_current and 'firstcurrent' or ''"
         >
        <a href="kontakt"
           >Kontakt</a>
      </li>
      <li 
         tal:define="is_current python:context.getId().startswith('konzept')"
         tal:attributes="id python:is_current and 'current' or ''">
        <a href="konzept" 
           tal:attributes="class python:is_current and 'active' or ''"
           >Konzept</a>
      </li>
      <li
         tal:define="is_current python:context.getId().startswith('benutzerrichtlinien')"
         tal:attributes="id python:is_current and 'current' or ''"
         >
        <a href="benutzerrichtlinien" 
           tal:attributes="class python:is_current and 'active' or ''"
           >Benutzerrichtlinien</a>
      </li>
      <li class="last"
         tal:define="is_current python:context.getId().startswith('copyright')"
         tal:attributes="id python:is_current and 'lastcurrent' or ''"
         >
        <a 
           tal:attributes="class python:is_current and 'active' or ''"
           href="copyright">Copyright</a>
      </li>
    </ul>
  </div>

</html>
